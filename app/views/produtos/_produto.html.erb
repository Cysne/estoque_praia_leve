<div id="<%= dom_id produto %>">
  <p>
    <strong>Nome:</strong>
    <%= produto.nome %>
  </p>

  <p>
    <strong>Descricao:</strong>
    <%= produto.descricao %>
  </p>

  <p>
    <strong>Estoque:</strong>
    <%= produto.estoque %>
  </p>

  <p>
    <strong>Marca:</strong>
    <%= produto.marca %>
  </p>

  <p>
    <strong>Cor:</strong>
    <%= produto.cor %>
  </p>

  <p>
    <strong>Foto:</strong>
    <%= link_to produto.foto.filename, produto.foto if produto.foto.attached? %>
  </p>

</div>
